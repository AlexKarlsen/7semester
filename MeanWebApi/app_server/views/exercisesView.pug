extends layout  
block content
  .container
    h1.jumbotron= title
    a(href='exerciseCreateView?_workout=' + _workout class='btn btn-default col-md-1') Create

    table(class='table-bordered')
      tr
        th Exercises
        th Description
        th Sets
        th Reps/Time
        each item in exercises
          tr
            td= item.exercise
            td= item.description
            td= item.sets
            td= item.reps
      
            